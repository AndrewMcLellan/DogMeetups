<h2>Sign up</h2>

<%= form_for(@dog) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :breed %><br />
    <%= f.text_field :breed, autocomplete: "breed" %>
  </div>

  <div class="field">
    <%= f.label :age %><br />
     <%= f.collection_select(:age, @age_collection, :last, :first, { include_blank: true }) %>
  </div>

  <div class="field">
    <%= f.label :weight %><br />
    <%= f.text_field :weight, autocomplete: "weight" %>
  </div>

  <div class="field">
    <%= f.label :good_with_puppies %>
    <%= f.collection_radio_buttons(:good_with_puppies, @boolean_collection, :first, :last) %>

  </div>


  <div class="actions">
    <%= f.submit "Add Dog" %>
  </div>
<% end %>

<% if !@errors.nil? %>
<ul>
  <% @errors.each do |error| %>
  <li><%= error %></li>
  <% end %>
</ul>
<% end %>
